<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <ScrollView  
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
   <LinearLayout
    android:id="@+id/ll_chapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/white">    
	    <LinearLayout android:id="@+id/ll_chapter_intro"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" 
		    android:orientation="horizontal"
		    android:background="@color/background_item"/>
	</LinearLayout>    
    </ScrollView>
    <ImageButton android:id="@+id/ib_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:contentDescription="@null"
    	android:background="@drawable/ib_renew_bg"
        android:src="@drawable/renew" />

 
</LinearLayout>
