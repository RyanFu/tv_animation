<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >
    
    <LinearLayout android:id="@+id/ll_loading"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:gravity="center"
	    android:layout_margin="@dimen/dialog_player_loading_ll_margin"
	    android:orientation="horizontal">
	    <include layout="@layout/layout_loading"
	        android:layout_width="@dimen/dialog_player_loading_imagesize"
            android:layout_height="@dimen/dialog_player_loading_imagesize" />		
		<TextView
		    android:id="@+id/textview_load"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_player_loading_tv_margin_rl"
		    android:gravity="center"
		    android:textSize="@dimen/dialog_player_loading_textsize"
		    android:text="影片讀取中" />
		</LinearLayout>
	<View android:id="@+id/v_seperate"
	    android:layout_width="wrap_content"
        android:layout_height="@dimen/dialog_player_loading_v_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="@dimen/dialog_player_loading_v_margin_rl"
        android:layout_marginLeft="@dimen/dialog_player_loading_v_margin_rl"
        android:background="@drawable/dialog_player_loader_linecolor" />
</LinearLayout>
