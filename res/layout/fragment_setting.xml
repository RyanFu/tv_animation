<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
        android:layout_margin="@dimen/setting_fragment_margin"
	    android:orientation="vertical" >
	    
	    <View 
	        android:layout_width="match_parent"
            android:layout_height="@dimen/setting_fragment_seperate_height"
            android:background="@color/white" />
	    <RelativeLayout android:id="@+id/rl_declare"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/setting_fragment_itemsize"
	        android:paddingLeft="@dimen/setting_fragment_itempadding"
	        android:background="@drawable/setting_item_bg" >

            <ImageView android:id="@+id/iv_declare"
                android:layout_width="@dimen/setting_fragment_imagesize"
                android:layout_height="@dimen/setting_fragment_imagesize"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/setting_fragment_itemmargin"
                android:duplicateParentState="true"
                android:contentDescription="@null"
                android:src="@drawable/ib_setting_statement"/>
		    <TextView 	        
		        android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_declare"
                android:layout_marginLeft="@dimen/setting_fragment_itemmargin"
                android:duplicateParentState="true"
		        android:textSize="@dimen/setting_fragment_textsize"
		        android:textColor="@drawable/tv_setting_textcolor"
		        android:text="免責聲明"/>
	    </RelativeLayout>
	    <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_fragment_seperate_height"
            android:background="@color/white" />
	
	    <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_fragment_seperate_height"
            android:background="@color/white" />
        <RelativeLayout android:id="@+id/rl_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_fragment_itemsize"
            android:paddingLeft="@dimen/setting_fragment_itempadding"
            android:background="@drawable/setting_item_bg" >

            <ImageView android:id="@+id/iv_feedback"
                android:layout_width="@dimen/setting_fragment_imagesize"
                android:layout_height="@dimen/setting_fragment_imagesize"
                android:layout_marginLeft="@dimen/setting_fragment_itemmargin"
                android:duplicateParentState="true"
                android:contentDescription="@null"
                android:layout_centerVertical="true"
                android:src="@drawable/ib_setting_suggestion"/>
            <TextView           
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_feedback"
                android:layout_marginLeft="@dimen/setting_fragment_itemmargin"
                android:duplicateParentState="true"
                android:textSize="@dimen/setting_fragment_textsize"
                android:textColor="@drawable/tv_setting_textcolor"
                android:text="建議回饋"/>
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_fragment_seperate_height"
            android:background="@color/white" />
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_fragment_seperate_height"
            android:background="@color/white" />
        <RelativeLayout android:id="@+id/rl_notification"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_fragment_itemsize"
            android:paddingLeft="@dimen/setting_fragment_itempadding"
            android:background="@drawable/setting_item_bg" >

            <ImageView android:id="@+id/iv_notification"
                android:layout_width="@dimen/setting_fragment_imagesize"
                android:layout_height="@dimen/setting_fragment_imagesize"
                android:layout_marginLeft="@dimen/setting_fragment_itemmargin"
                android:contentDescription="@null"
                android:duplicateParentState="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ib_setting_notice"/>
            <TextView           
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_notification"
                android:layout_marginLeft="@dimen/setting_fragment_itemmargin"
                android:duplicateParentState="true"
                android:textSize="@dimen/setting_fragment_textsize"
                android:textColor="@drawable/tv_setting_textcolor"
                android:text="推撥通知"/>
            <ImageView android:id="@+id/iv_notification_check"
                android:layout_width="@dimen/setting_fragment_imagesize"
                android:layout_height="@dimen/setting_fragment_imagesize"
                android:layout_marginRight="@dimen/setting_fragment_itemmargin"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"
                android:layout_centerVertical="true"
                android:src="@drawable/checkbox_normal" />
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_fragment_seperate_height"
            android:background="@color/white" />
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_fragment_seperate_height"
            android:background="@color/white" />
        <RelativeLayout android:id="@+id/rl_clean"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_fragment_itemsize"
            android:paddingLeft="@dimen/setting_fragment_itempadding"
            android:background="@drawable/setting_item_bg" >

            <ImageView android:id="@+id/iv_clear"
                android:layout_width="@dimen/setting_fragment_imagesize"
                android:layout_height="@dimen/setting_fragment_imagesize"
                android:layout_marginLeft="@dimen/setting_fragment_itemmargin"
                android:duplicateParentState="true"
                android:contentDescription="@null"
                android:layout_centerVertical="true"
                android:src="@drawable/ib_setting_delete"/>
            <TextView           
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_clear"
                android:duplicateParentState="true"
                android:textSize="@dimen/setting_fragment_textsize"
                android:layout_marginLeft="@dimen/setting_fragment_itemmargin"
                android:textColor="@drawable/tv_setting_textcolor"
                android:text="清除緩衝"/>
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_fragment_seperate_height"
            android:background="@color/white" />
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_fragment_seperate_height"
            android:background="@color/white" />
        <RelativeLayout android:id="@+id/rl_versionrecord"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_fragment_itemsize"
            android:paddingLeft="@dimen/setting_fragment_itempadding"
            android:background="@drawable/setting_item_bg" >

            <ImageView android:id="@+id/iv_versincheck"
                android:layout_width="@dimen/setting_fragment_imagesize"
                android:layout_height="@dimen/setting_fragment_imagesize"
                android:layout_marginLeft="@dimen/setting_fragment_itemmargin"
                android:duplicateParentState="true"
                android:contentDescription="@null"
                android:layout_centerVertical="true"
                android:src="@drawable/ib_setting_updates"/>
            <TextView           
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_versincheck"
                android:layout_marginLeft="@dimen/setting_fragment_itemmargin"
                android:duplicateParentState="true"
                android:textSize="@dimen/setting_fragment_textsize"
                android:textColor="@drawable/tv_setting_textcolor"
                android:text="更新日誌"/>
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_fragment_seperate_height"
            android:background="@color/white" />
        
	</LinearLayout>            
            
    <include layout="@layout/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" />
    
</RelativeLayout>
